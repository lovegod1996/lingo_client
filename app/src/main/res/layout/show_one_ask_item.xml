<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/splitline_color"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/one_ask_item_image"
            android:src="@mipmap/defulat_portrait"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black_000000"
            android:id="@+id/one_ask_item_name"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/one_ask_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/text_size_min"
            android:id="@+id/one_ask_item_time"
            android:layout_toRightOf="@+id/one_ask_item_image"
            android:layout_below="@+id/one_ask_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/one_ask_item_reply"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_mid"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/one_ask_item_time"
        android:layout_toRightOf="@+id/one_ask_item_image"
        android:layout_toEndOf="@+id/one_ask_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/one_ask_item_buystatue"
        android:background="@drawable/gradient_blue"
        android:textColor="@color/white_FFFFFF"
        android:gravity="center"
        android:textSize="11sp"
        android:text="已买"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/one_ask_item_name"
        android:layout_width="30dp"
        android:layout_height="15dp" />

    <ImageView
        android:layout_marginBottom="10dp"
        android:id="@+id/one_ask_item_thanks"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/thanks_icon"
        android:layout_below="@id/one_ask_item_reply"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />
</RelativeLayout>