<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white_FFFFFF"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="12dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/add_assess_item_image"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/add_assess_item_name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_assess_item_param"
        android:textSize="@dimen/text_size_min"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/add_assess_item_dealtime"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:text="成交时间"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/add_assess_item_button"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:textColor="@color/white_FFFFFF"
        android:textSize="@dimen/text_size_mid"
        android:text="去评价"
        android:layout_gravity="center"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"/>
</LinearLayout>
</android.support.v7.widget.CardView>