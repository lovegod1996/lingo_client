<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/for_the_payment_icon"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/for_the_payment_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginTop="8dp"
            android:layout_below="@id/for_the_payment_icon"
            android:layout_centerHorizontal="true"
            android:text="代付款"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_the_most_min"
            android:textColor="@color/black_000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/to_send_the_goods_icon"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/to_send_the_goods"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/to_send_the_goods_icon"
            android:layout_centerHorizontal="true"
            android:text="待发货"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_the_most_min"
            android:textColor="@color/black_000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/for_the_goods_icon"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/for_the_goods_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/for_the_goods_icon"
            android:layout_centerHorizontal="true"
            android:text="待收货"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_the_most_min"
            android:textColor="@color/black_000000"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/for_the_assess_icon"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/for_the_assess_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_below="@id/for_the_assess_icon"
            android:layout_centerHorizontal="true"
            android:text="待评价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_the_most_min"
            android:textColor="@color/black_000000"/>
    </RelativeLayout>
</LinearLayout>