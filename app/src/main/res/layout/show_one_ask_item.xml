<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/splitline_color"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/one_ask_item_image"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:textColor="@color/black_000000"
            android:id="@+id/one_ask_item_name"
            android:layout_marginTop="10dp"
            android:text="1112312"
            android:layout_toRightOf="@+id/one_ask_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/one_ask_item_time"
            android:text="2017"
            android:layout_toRightOf="@+id/one_ask_item_image"
            android:layout_below="@+id/one_ask_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_mid"
        android:layout_marginTop="10dp"
        android:text="不会有问题的"
        android:layout_below="@+id/one_ask_item_time"
        android:layout_toRightOf="@+id/one_ask_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>