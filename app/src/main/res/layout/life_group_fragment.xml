<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/life_group_item_image"
        android:src="@mipmap/group_icon"
        android:layout_margin="6dp"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/life_group_item_name"
        android:textSize="@dimen/text_size_min"
        android:textColor="@color/black_000000"
        android:layout_toRightOf="@id/life_group_item_image"
        android:layout_alignTop="@id/life_group_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/life_group_item_num"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_size_the_most_min"
        android:textColor="@color/text_light_gray"
        android:layout_below="@+id/life_group_item_name"
        android:layout_alignLeft="@+id/life_group_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>