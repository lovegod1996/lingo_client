<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_FFFFFF">
    <View
        android:background="@color/splitline_color"
        android:layout_width="match_parent"
        android:layout_height="15dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:id="@+id/order_viewpager_item_shopname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/shopcart_shop"
            android:drawablePadding="10dp"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/text_size_small"/>

        <TextView
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorPrimary"
            android:id="@+id/order_viewpager_item_statuetext"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/order_viewpager_item_goodslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black_000000"
            android:id="@+id/order_viewpager_item_price"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_viewpager_item_totaltext"
            android:textSize="@dimen/text_size_min"
            android:textColor="@color/black_000000"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:text="合计:"
            android:layout_toStartOf="@+id/order_viewpager_item_price"
            android:layout_toLeftOf="@+id/order_viewpager_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/order_viewpager_item_count"
            android:textSize="@dimen/text_size_min"
            android:textColor="@color/black_000000"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/order_viewpager_item_totaltext"
            android:layout_toLeftOf="@+id/order_viewpager_item_totaltext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/order_viewpager_add_assess_button"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black_000000"
            android:text="追加评价"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_shape"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/order_viewpager_query_button"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black_000000"
            android:text="查看物流"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_shape"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/order_viewpager_cancel_button"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black_000000"
            android:text="取消订单"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_shape"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/order_viewpager_note_button"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/black_000000"
            android:text="提醒发货"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_shape"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/order_viewpager_pay_button"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorPrimary"
            android:text="付款"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_primarycolor_shape"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/order_viewpager_sure_button"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/colorPrimary"
            android:text="确认收货"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_primarycolor_shape"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>