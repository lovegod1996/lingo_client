<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/home_goods_layout"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    android:layout_marginBottom="6dp"
    android:background="@color/white_FFFFFF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<ImageView
    android:id="@+id/home_goods_pic"
    android:src="@mipmap/default_image"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:scaleType="centerCrop"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/home_goods_name"
        android:layout_margin="5dp"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_min"
        android:text="小米电视"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_below="@id/home_goods_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/home_goods_price"
        android:textSize="@dimen/text_size_the_most_min"
        android:layout_margin="4dp"
        android:text="￥33"
        android:textColor="@color/orange_F57C00"
        android:layout_below="@id/home_goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/text_size_the_most_min"
        android:gravity="center"
        android:layout_alignBottom="@id/home_goods_price"
        android:text="36人已买"
        android:layout_toRightOf="@id/home_goods_price"
        android:id="@+id/home_goods_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>