<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trial_item_layout"
    android:layout_marginBottom="10dp"
    android:background="?attr/selectableItemBackground">
    <ImageView
        android:id="@+id/trial_item_image"
        android:layout_margin="10dp"
        android:src="@mipmap/default_image"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/trial_item_name"
        android:layout_alignTop="@+id/trial_item_image"
        android:layout_toRightOf="@+id/trial_item_image"
        android:textColor="@color/black_000000"
        android:textSize="@dimen/text_size_mid"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_min"
        android:textColor="@color/text_dark_gray"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/trial_item_image"
        android:id="@+id/trial_item_price"
        android:layout_below="@+id/trial_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/trial_item_time"
        android:layout_marginTop="5dp"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/text_size_min"
        android:layout_toRightOf="@+id/trial_item_image"
        android:layout_below="@+id/trial_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/trial_item_view"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/trial_item_time"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/splitline_color"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/trial_item_statuetext"
        android:textColor="@color/text_dark_gray"
        android:textSize="@dimen/text_size_small"
        android:layout_margin="12dp"
        android:text="申请审核中，请耐心等待！"
        android:layout_below="@id/trial_item_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="10dp"
        android:layout_below="@id/trial_item_statuetext"
        android:background="@color/splitline_color"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</RelativeLayout>