<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splitline_color"
    tools:context="com.lovegod.newbuy.view.myinfo.ChangeUserNameActivity">
    <android.support.v7.widget.Toolbar
        app:navigationIcon="@mipmap/ic_back_black"
        android:id="@+id/chang_username_toolbar"
        android:background="@color/white_FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="修改用户名"/>
    <android.support.design.widget.TextInputEditText
        android:id="@+id/change_username_edit"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="text"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="@string/username_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:textSize="@dimen/text_size_mid"
        android:text="@string/commit"
        android:id="@+id/change_username_commit_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/login_button_selector" />
</LinearLayout>
