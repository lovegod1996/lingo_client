<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="?android:attr/selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/imageitem_left_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/imageitem_left_text"
            android:layout_toRightOf="@id/imageitem_left_image"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_min"
            android:textColor="@color/black_000000"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_item_height" />
        <ImageView
            android:src="@mipmap/more_icon"
            android:id="@+id/more_info_icon"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginRight="12dp"/>
        <TextView
            android:id="@+id/imageitem_right_text"
            android:gravity="center"
            android:textSize="@dimen/text_size_the_most_min"
            android:textColor="@color/text_light_gray"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@id/more_info_icon"
            android:layout_height="@dimen/nav_item_height" />
        </RelativeLayout>
        <View
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/splitline_color"/>
</LinearLayout>
