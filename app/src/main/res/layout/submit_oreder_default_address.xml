<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/submit_order_default_address_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="?android:attr/selectableItemBackground"
    app:layout_scrollFlags="enterAlways|scroll|snap"
    android:layout_height="wrap_content">
    <TextView
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/black_000000"
        android:paddingLeft="15dp"
        android:paddingTop="20dp"
        android:id="@+id/submit_order_default_address_nametext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="收货人:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/black_000000"
        android:id="@+id/submit_order_default_address_name"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/submit_order_default_address_nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/black_000000"
        android:id="@+id/submit_order_default_address_phone"
        android:paddingTop="20dp"
        android:paddingRight="40dp"
        android:text=""
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_min"
        android:id="@+id/submit_order_default_address_addresstext"
        android:paddingLeft="12dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:text="收货地址: "
        android:layout_below="@id/submit_order_default_address_nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_min"
        android:id="@+id/submit_order_default_address_address"
        android:padding="12dp"
        android:text="(你还没有设置默认收货地址或者没有收货地址,点击选择或添加收货地址)"
        android:layout_toRightOf="@id/submit_order_default_address_addresstext"
        android:layout_below="@id/submit_order_default_address_nametext"
        android:layout_width="260dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginRight="8dp"
        android:src="@mipmap/more_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:layout_height="20dp" />
    <View
        android:layout_below="@id/submit_order_default_address_address"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/splitline_color"/>
</RelativeLayout>