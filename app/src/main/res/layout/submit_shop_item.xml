<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_FFFFFF"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/splitline_color"/>
<TextView
    android:layout_margin="10dp"
    android:id="@+id/submit_shop_item_shopname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableLeft="@mipmap/shopcart_shop"
    android:drawablePadding="10dp"
    android:textColor="@color/black_000000"
    android:textSize="@dimen/text_size_small"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/submit_shop_item_shoplist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </LinearLayout>

    <com.lovegod.newbuy.view.myview.ItemTextLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_left_text="配送方式"
        app:text_right_text="快递 免邮"/>

    <com.lovegod.newbuy.view.myview.ItemTextLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text_left_text="运费险"
        app:text_right_text="未选择"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="买家留言"
            android:id="@+id/submit_shop_item_message"
            android:layout_marginLeft="12dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_size_min"
            android:textColor="@color/black_000000"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/nav_item_height" />
        <EditText
            android:hint="选填:对本次交易的说明"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@color/transparent"
            android:id="@+id/submit_shop_item_message_edit"
            android:textSize="@dimen/text_size_the_most_min"
            android:textColor="@color/black_000000"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/submit_shop_item_message"
            android:layout_height="@dimen/nav_item_height" />
    </RelativeLayout>

    <View
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/splitline_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/submit_shop_item_price"
            android:layout_margin="16dp"
            android:textSize="@dimen/text_size_mid"
            android:textColor="@color/orange_FE5203"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/submit_shop_item_num"
            android:textSize="@dimen/text_size_min"
            android:textColor="@color/black_000000"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@id/submit_shop_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>