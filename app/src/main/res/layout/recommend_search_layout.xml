<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/search_recommend_layout"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <TextView
        android:layout_marginLeft="5dp"
        android:text="热门搜索"
        android:textColor="@color/text_light_gray"
        android:textSize="@dimen/text_size_the_most_min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.lovegod.newbuy.view.search.ControlScrollRecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/search_recycler_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/search_history_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="历史记录"
                android:textColor="@color/text_light_gray"
                android:textSize="@dimen/text_size_the_most_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/search_delete_button"
                android:src="@mipmap/delete_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="17dp"
                android:layout_height="17dp" />
        </RelativeLayout>
        <com.lovegod.newbuy.view.search.ControlScrollRecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/search_recycler_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>