<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#FFFFFF"
        android:id="@+id/good_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/good_picture"
            android:layout_width="115dp"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:src="@mipmap/default_image"
            android:scaleType="centerCrop"/>
        <TextView
            android:textColor="@color/black_000000"
            android:id="@+id/good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/good_picture"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/orange_F57C00"
            android:layout_marginTop="85dp"
            android:layout_toRightOf="@id/good_picture"
            android:textSize="18dp" />
    <TextView
        android:id="@+id/good_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/orange_F57C00"
        android:layout_marginTop="85dp"
        android:layout_toRightOf="@id/money"
        android:textSize="18dp" />
    <!--  <TextView
        android:id="@+id/sale_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5件"
        android:layout_marginTop="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textSize="15dp" />-->
        <TextView
            android:id="@+id/sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详情"
            android:drawableRight="@mipmap/rightarrow"
            android:drawablePadding="7dp"
            android:layout_marginTop="90dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="14dp" />

    <Button
        android:id="@+id/good_delete_button"
        android:visibility="gone"
        android:textSize="@dimen/text_size_mid"
        android:background="#FF00"
        android:textColor="@color/white_FFFFFF"
        android:gravity="center"
        android:text="删除"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="70dp"
        android:layout_height="120dp" />

    <View
        android:background="@color/splitline_color"
        android:layout_below="@id/good_picture"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    </RelativeLayout>