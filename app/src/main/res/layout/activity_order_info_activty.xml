<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/splitline_color"
    tools:context="com.lovegod.newbuy.view.carts.OrderInfoActivty">

        <android.support.v7.widget.Toolbar
            android:id="@+id/order_info_toolbar"
            android:background="@color/background_light_gray"
            app:navigationIcon="@mipmap/ic_back_black"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/text_size_large"
                    android:gravity="center"
                    android:text="订单详情"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/order_info_image"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/order_info_statue_text"
                        android:textColor="@color/black_000000"
                        android:textSize="@dimen/text_size_small"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black_000000"
                        android:id="@+id/order_info_time_text"
                        android:textSize="@dimen/text_size_min"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </FrameLayout>

            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white_FFFFFF"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_mid"
                    android:textColor="@color/black_000000"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:id="@+id/order_info_address_nametext"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="收货人:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_mid"
                    android:textColor="@color/black_000000"
                    android:id="@+id/order_info_address_name"
                    android:paddingTop="20dp"
                    android:paddingLeft="5dp"
                    android:layout_toRightOf="@+id/order_info_address_nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_mid"
                    android:textColor="@color/black_000000"
                    android:id="@+id/order_info_address_phone"
                    android:paddingTop="20dp"
                    android:paddingRight="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_min"
                    android:id="@+id/order_info_address_addresstext"
                    android:paddingLeft="12dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:text="收货地址: "
                    android:layout_below="@id/order_info_address_nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/text_size_min"
                    android:id="@+id/order_info_address_address"
                    android:padding="12dp"
                    android:layout_toRightOf="@id/order_info_address_addresstext"
                    android:layout_below="@id/order_info_address_nametext"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="10dp"
                android:background="@color/white_FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="10dp"
                    android:id="@+id/order_info_shopname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/shopcart_shop"
                    android:drawablePadding="10dp"
                    android:textColor="@color/black_000000"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>

            <LinearLayout
                android:background="@color/white_FFFFFF"
                android:orientation="vertical"
                android:id="@+id/order_info_goodslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:background="@color/white_FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/black_000000"
                    android:id="@+id/order_info_price"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/order_info_totaltext"
                    android:textSize="@dimen/text_size_min"
                    android:textColor="@color/black_000000"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="合计:"
                    android:layout_toStartOf="@+id/order_info_price"
                    android:layout_toLeftOf="@+id/order_info_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:background="@color/white_FFFFFF"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:drawableLeft="@mipmap/contact_icon"
                    android:background="@drawable/search_activity_shape"
                    android:text="联系卖家"
                    android:layout_margin="15dp"
                    android:layout_width="130dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/white_FFFFFF"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/order_info_ordernum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="3dp"
                    android:visibility="gone"
                    android:id="@+id/order_info_paynum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/order_info_createtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginBottom="3dp"
                    android:id="@+id/order_info_paytime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/order_info_delivertime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
