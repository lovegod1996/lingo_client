<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ask_item_ask_icon"
            android:src="@mipmap/ask_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/ask_item_asktext"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black_000000"
            android:textSize="@dimen/text_size_big"
            android:text="可以看见大设计大大说的阿萨德阿萨德as的阿萨德as大声的阿萨德"
            android:layout_toEndOf="@+id/ask_item_ask_icon"
            android:layout_toRightOf="@+id/ask_item_ask_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ask_item_answer_icon"
            android:src="@mipmap/answer_icon"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:maxLines="3"
            android:ellipsize="end"
            android:id="@+id/ask_item_answertext"
            android:textColor="@color/black_414040"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/text_size_small"
            android:text="没什么大问题的"
            android:layout_toEndOf="@+id/ask_item_answer_icon"
            android:layout_toRightOf="@+id/ask_item_answer_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="36dp"
        android:layout_marginBottom="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ask_item_more"
            android:textColor="@color/blue_2196F3"
            android:text="查看6个回答"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/ask_item_time"
            android:paddingRight="10dp"
            android:paddingEnd="10dp"
            android:text="2017-07-09 15:12:13"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/splitline_color"/>
</LinearLayout>