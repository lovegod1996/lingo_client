<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.v7.widget.Toolbar
    android:id="@+id/map_toobar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/map_bacck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/turn_left"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/map_shop_name"
        android:text="sfghj"
        android:textSize="14dp"
        android:gravity="center_horizontal"/>
</android.support.v7.widget.Toolbar>



<com.baidu.mapapi.map.MapView
    android:id="@+id/bmapView"
    android:layout_below="@id/map_toobar"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true" />

    <ImageView
        android:id="@+id/traffic_map"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/shishi0"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"/>
    <ImageView
        android:id="@+id/satellite_map"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@mipmap/starmap1"
        android:layout_alignParentRight="true"
        android:layout_below="@id/traffic_map"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/flg_navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="75dp"
        android:src="@mipmap/lotion"
        app:backgroundTint="@color/blue_2196F3" />

</RelativeLayout>